{% extends 'base.html.twig' %}

{% block body %}
    <div class="columns is-vcentered">
        <div class="column is-two-two">
            <h1 class="title is-1">{{ app.name }}</h1>
        </div>
            <a class="button is-primary is-medium" href="{{ path('app_pull', { 'id': app.id }) }}">
                <span class="icon">
                    <i class="fa fa-download" aria-hidden="true"></i>
                </span>Pull
            </a>
            <a class="button is-success is-medium" href="{{ path('app_edit', { 'id': app.id }) }}">
                <span class="icon">
                    <i class="fa fa-edit"></i>
                </span>Edit
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                {{ form_start(delete_form) }}
                    <input class="button is-danger is-medium" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            {% endif %}
    </div>
    <div class="content">
        <!-- TODO : Place l'image de l'app quelque part, je ne sais pas oÃ¹... -->

        <p>Last version: <span class="tag is-success is-small">{{ app.version }}</span></p>
        Description :
        <p>{{ app.description }}</p>
        <h4 class="title is-6">Parameters</h4>
        <p>{{ app.parametres }}</p>
    </div>

    <div class="columns is-vcentered">
        <div class="column is-half">
            <a class="button" href="{{ path('app_index') }}">Back to the list</a>
        </div>
    </div>
{% endblock %}