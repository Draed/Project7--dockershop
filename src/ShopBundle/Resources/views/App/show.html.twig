{% extends 'base.html.twig' %}

{% block body %}
    <h1>App</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ app.name }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ app.version }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('app_edit', { 'id': app.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}